<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Perfil de Usuário</h1>
        <br>

        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Datos Personales</h3>
                <br><br>

                <form class="form-horizontal form" action="/users/profile" method="POST">
                  <div class="form-group">
                      <input type="hidden" name="_csrf" value="{{csrfToken}}">
                  </div>
                    {{#if user}}
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="name">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" name="name" placeholder=""
                                value="{{ this.user.nombre }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="city">Provincia</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="city" name="city" placeholder=""
                                value="{{this.user.provincia}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="state">Localidad</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="state" name="state" placeholder=""
                                value="{{this.user.localidad}}">
                        </div>
                    </div>


                    <div class="form-group hidden">
                        <label class="control-label col-sm-2" for="email">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="email" name="email" placeholder=""
                                value="{{this.user.email}}">
                        </div>
                    </div>


                      <!-- <div class="form-group hidden">
                          <label class="control-label col-sm-2" for="password">Contraseña</label>
                          <div class="col-sm-10">
                              <input type="password" id="password" name="password" class="form-control">
                          </div>
                      </div> -->

                    <button type="submit" class="btn btn-success">Actualizar perfil</button>
                    {{/if}}
                </form>
            </div>
            <div class="panel-body">

                <form class="form-horizontal form" action="/users/removeUser" method="POST">
                  <div class="form-group">
                      <input type="hidden" name="_csrf" value="{{csrfToken}}">
                  </div>
                    <button type="submit" class="btn btn-danger">Cerrar cuenta</button>
                </form>

            </div>
        </div>

        {{# each orders }}
        <div class="panel panel-default">

            <div class="panel-body">
                <h3>Mis compras</h3>
                <hr>
                <ul class="list-group">
                    {{# each this.items }}
                    <li class="list-group-item">
                        <span class="badge">€{{ this.price }}</span> {{ this.item.title }} | {{ this.qty }} Unidade(s)
                    </li>
                    {{/each}}
                </ul>
            </div>

            <div class="panel-footer">
                <strong>Valor Total: €{{ this.cart.totalPrice }}</strong>
            </div>

        </div>
        {{/each}}
    </div>
</div>
